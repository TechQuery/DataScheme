{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "legacyDecorators": true
        }
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error", 4, {"SwitchCase": 1}
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-cond-assign": "off",
        "no-console": ["error", {
            "allow": ["info", "warn", "error", "time", "timeEnd"]
        }]
    }
}
